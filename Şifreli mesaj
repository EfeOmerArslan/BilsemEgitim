from cryptography.fernet import Fernet
def keyUret():
    key = Fernet.generate_key()
    with open("key.txt","wb") as keyDosyasi:
        keyDosyasi.write(key)
#keyUret()
def keyOku():
    with open("key.txt","rb") as keyOku:
            return keyOku.read()
okunanKey = keyOku()
print(okunanKey)
mesaj = input("Şifrelenecek mesajı giriniz:").encode()
print(mesaj)
f=Fernet(okunanKey)
sifrelimesaj=f.encrypt(mesaj)
print(sifrelimesaj)
#1- Key ürettik 
# 2-Keyi unutmamak için bir dosyaya kaydettik 
# 3-Keyi daha sonra kullanmak için keyOku fonksiyonu yazdık. 
# 4- Kullanıcıdan mesaj aldık 
# 5- Mesajı ekrana yazdırdık
# 6-Mesajı şifreledik 
# 7-Şifreli mesajı ekrana yazdırdık
